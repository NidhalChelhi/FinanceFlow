<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/21.0.5"
            fx:controller="financeflow.controllers.accounts.CreditLimitController" stylesheets="/resources/styles/creditlimit.css">
    <children>
        <VBox spacing="20" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
              AnchorPane.bottomAnchor="10">
            <!-- Title -->
            <Label text="Limites de Crédit" id="page-title"/>

            <!-- Search Bar -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Rechercher par client..." id="search-field"/>
                <Button text="Ajouter une limite de crédit" onAction="#handleAddCreditLimit" id="add-button"/>
            </HBox>

            <!-- Table for displaying credit limits -->
            <TableView fx:id="creditLimitTable" prefHeight="400">
                <columns>
                    <TableColumn text="ID Crédit" fx:id="idColumn" prefWidth="100"/>
                    <TableColumn text="Client" fx:id="clientColumn" prefWidth="200"/>
                    <TableColumn text="Crédit Total" fx:id="totalCreditColumn" prefWidth="150"/>
                    <TableColumn text="Crédit Utilisé" fx:id="usedCreditColumn" prefWidth="150"/>
                    <TableColumn text="Crédit Disponible" fx:id="availableCreditColumn" prefWidth="150"/>
                </columns>
                <placeholder>
                    <Label text="Aucune limite de crédit trouvée" id="table-placeholder"/>
                </placeholder>
            </TableView>

            <!-- Action Buttons -->
            <HBox spacing="10" alignment="CENTER_LEFT" id="action-buttons">
                <Button text="Modifier" onAction="#handleEditCreditLimit" id="edit-button"/>
                <Button text="Supprimer" onAction="#handleDeleteCreditLimit" id="delete-button"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
