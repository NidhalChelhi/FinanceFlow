<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/21.0.5"
            fx:controller="financeflow.controllers.accounts.LoanController" stylesheets="/resources/styles/loan.css">
    <children>
        <VBox spacing="20" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
              AnchorPane.bottomAnchor="10">
            <!-- Title -->
            <Label text="Gestion des Prêts" id="page-title"/>

            <!-- Search Bar -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Rechercher par client ou type de prêt..." id="search-field"/>
                <Button text="Ajouter un prêt" onAction="#handleAddLoan" id="add-button"/>
            </HBox>

            <!-- Table for displaying loans -->
            <TableView fx:id="loanTable" prefHeight="400">
                <columns>
                    <TableColumn text="ID Prêt" fx:id="idColumn" prefWidth="100"/>
                    <TableColumn text="Type de Prêt" fx:id="loanTypeColumn" prefWidth="150"/>
                    <TableColumn text="Montant" fx:id="amountColumn" prefWidth="150"/>
                    <TableColumn text="Taux d'intérêt" fx:id="interestRateColumn" prefWidth="150"/>
                    <TableColumn text="Durée (Mois)" fx:id="durationColumn" prefWidth="150"/>
                    <TableColumn text="Client" fx:id="clientColumn" prefWidth="150"/>
                    <TableColumn text="Statut" fx:id="statusColumn" prefWidth="150"/>
                </columns>
                <placeholder>
                    <Label text="Aucun prêt trouvé" id="table-placeholder"/>
                </placeholder>
            </TableView>

            <!-- Action Buttons -->
            <HBox spacing="10" alignment="CENTER_LEFT" id="action-buttons">
                <Button text="Modifier" onAction="#handleEditLoan" id="edit-button"/>
                <Button text="Supprimer" onAction="#handleDeleteLoan" id="delete-button"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
